<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LiteNetLib" Version="1.3.5" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <PropertyGroup>
      <UnityPluginsDir>$(ProjectDir)..\..\Client\Assets\Plugins\GameShared\</UnityPluginsDir>
    </PropertyGroup>

    <Exec Command="if not exist &quot;$(UnityPluginsDir)&quot; mkdir &quot;$(UnityPluginsDir)&quot;" />
    <Exec Command="copy /Y &quot;$(TargetDir)$(TargetName).dll&quot; &quot;$(UnityPluginsDir)$(TargetName).dll&quot;" />
    <Exec Command="copy /Y &quot;$(TargetDir)$(TargetName).pdb&quot; &quot;$(UnityPluginsDir)$(TargetName).pdb&quot;" />
  </Target>

</Project>